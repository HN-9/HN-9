//largest number among 3


#include <stdio.h>
  
int main()
{
    int A, B, C;
  
    printf("Enter the numbers A, B and C: ");
    scanf("%d %d %d", &A, &B, &C);
  
  // finding maximum number using compound expressions
    if (A >= B && A >= C)
        printf("%d is the largest number.", A);
  
    else if (B >= A && B >= C)
        printf("%d is the largest number.", B);
  
    else
        (C >= A && C >= B);
            printf("%d is the largest number.", C);
  
    return 0;
}


//Finding Roots of a Qaudratic Equations
#include <stdio.h>
#include <math.h>

int main() {
    // Define the coefficients of the quadratic 
    float a, b, c;
    printf("Enter the coefficients of the quadratic equation: ");
    scanf(" %f %f %f ", &a, &b, &c);

    // Calculate the Disriminant
    float discriminant = b * b - 4 * a * c;

    // Check if discriminant is positive.
    if (discriminant > 0) {
        // Equation has two real roots.
        float root1 = (-b + sqrt(discriminant)) / (2 * a);
        float root2 = (-b - sqrt(discriminant)) / (2 * a);
        printf("The roots of the equation are %f and %f.", root1, root2);
    } else if (discriminant == 0) {
        // Equation has one real root.
        float root = -b / (2 * a);
        printf("The root of the equation is %f.", root);
    } else {
        // Equation has no real roots.
        printf("The equation has no real roots.");
    }

    return 0;
}

//factorial program
#include<stdio.h>
#include<math.h>

int main() {
    int a,i,fact=1;
    printf("enter number: ");
    scanf("%d",&a);
    for (i=1; i <= a; i++) {
        fact = fact*i;
    }
    printf("the factorial of %d is : %d ",a,fact);
    return 0;
}



// code to check prime number 
 #include <stdio.h>

int main() {

  int n, i, flag = 0;
  printf("Enter a positive integer: ");
  scanf("%d", &n);

  // 0 and 1 are not prime numbers
  // change flag to 1 for non-prime number
  if (n == 0 || n == 1)
    flag = 1;

  for (i = 2; i <= sqrt(n); ++i) {

    // if n is divisible by i, then n is not prime
    // change flag to 1 for non-prime number
    if (n % i == 0) {
      flag = 1;
      break;
    }
  }

  // flag is 0 for prime numbers
  if (flag == 0)
    printf("%d is a prime number.", n);
  else
    printf("%d is not a prime number.", n);

  return 0;
}


//fibonacci series
#include<stdio.h>
int main(){
    
    int i,n;
    int t1=0 , t2=1;
    int t3 = t1 + t2;
    printf("range of series: ");
    scanf("%d",&n);
    printf("fibonacci series is: %d, %d, ", t1,t2);
    for(i=3; i<=n; i++){
        
        printf("%d, ", t3);
        t1=t2;
        t2=t3;
        t3=t1+t2;
    }
return 0;
}
